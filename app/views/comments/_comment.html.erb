<div class="row">
	<% if logged_in? %>
		<div class="span0 well">
			<%= link_to vote_comment_path(comment, vote: true), title: "good", method: "post", remote: true do %>
				<i class="icon-arrow-up"></i>
			<% end %>
			<br />
			<span id="comment_<%= comment.id %>_votes">
				<%= comment.total_votes %>
			</span>
			<br />
			<%= link_to vote_comment_path(comment, vote: false), title: "bad", method: "post", remote: true do %>
				<i class="icon-arrow-down"></i>
			<% end %>
		</div>
	<% end %>

  <div class="well span8">
  	<em>"<%= comment.body %>"</em>
  	<br/>
  	<span class="quiet">by</span> <%= comment.creator.username %>
  	<small>at <%= display_datetime(comment.created_at) %></small>
  </div>
</div>