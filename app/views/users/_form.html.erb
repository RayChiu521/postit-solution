
<%= render "shared/errors", obj: @user %>
<div class="well">
	<%= form_for @user do |f| %>
		<div class="control-group">
			<%= f.label :username %>
			<%= f.text_field :username %>
		</div>
		<div class="control-group">
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>
		<div class="control-group">
			<%= f.label :time_zone %>
			<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all %>
		</div>
		<div class="control-group">
			<%= f.label :phone %>
			<%= f.text_field :phone %>
		</div>

		<br />
		<%= f.submit @user.new_record? ? 'Create User' : 'Edit User', class: 'btn btn-primary' %>
	<% end %>
</div>